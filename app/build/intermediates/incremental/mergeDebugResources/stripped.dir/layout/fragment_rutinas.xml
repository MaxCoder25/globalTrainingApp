<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rutinas.RutinasFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTitulo1"
            android:layout_width="228dp"
            android:layout_height="47dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="4dp"
            android:text="       RUTINAS"
            android:textColor="@color/LoginText"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtFullbody"
            android:layout_width="305dp"
            android:layout_height="108dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:background="#1E2AD6"
            android:gravity="center"
            android:text="FULL BODY                                                      Rutinas diseñadas para ganar fuerza en todo el cuerpo"
            android:textColor="@color/LoginBackground"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo1" />

        <TextView
            android:id="@+id/txtGrupMusc"
            android:layout_width="305dp"
            android:layout_height="106dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="164dp"
            android:background="#871FA1"
            android:gravity="center"
            android:text="GRUPOS MUSCULARES                                                               Rutinas diseñadas para ganar                                              fuerza de manera mas especifica "
            android:textColor="@color/LoginBackground"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtFullbody" />

        <EditText
            android:id="@+id/txtNum"
            android:layout_width="73dp"
            android:layout_height="44dp"
            android:layout_marginStart="244dp"
            android:layout_marginTop="216dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="15"
            android:textColor="@color/LoginBackground"
            app:layout_constraintStart_toStartOf="@+id/txtFullbody"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo1" />

        <TextView
            android:id="@+id/txtKettlebell"
            android:layout_width="305dp"
            android:layout_height="110dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="136dp"
            android:background="#B80303"
            android:gravity="center"
            android:text="KETTLEBELLS                                            Rutinas con pesas rusas para ganar potencia y movilidad"
            android:textColor="@color/LoginBackground"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtGrupMusc" />

        <EditText
            android:id="@+id/txtNum1"
            android:layout_width="73dp"
            android:layout_height="44dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="15"
            android:textColor="@color/LoginBackground"
            app:layout_constraintStart_toStartOf="@+id/txtFullbody"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo1" />

        <EditText
            android:id="@+id/txtNum2"
            android:layout_width="73dp"
            android:layout_height="44dp"
            android:layout_marginStart="232dp"
            android:layout_marginTop="143dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="15"
            android:textColor="@color/LoginBackground"
            app:layout_constraintStart_toStartOf="@+id/txtKettlebell"
            app:layout_constraintTop_toTopOf="@+id/txtGrupMusc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>