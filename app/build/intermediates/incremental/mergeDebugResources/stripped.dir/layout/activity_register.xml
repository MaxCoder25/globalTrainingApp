<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LoginBackground"
    android:focusableInTouchMode="false"
    tools:context=".presentacion.RegisterActivity">


    <TextView
        android:id="@+id/txtRegistrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="144dp"
        android:text="Registrese"
        android:textColor="@color/LoginText"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="136dp"
        android:layout_height="121dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitrevlogo" />

    <TextView
        android:id="@+id/txtEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="148dp"
        android:text="Email"
        android:textColorHint="@color/LoginText"
        android:theme="@style/LoginInputLayout"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRegistrese"
        app:startIconDrawable="@drawable/ic_email_24"
        app:startIconTint="#FFFFFF" />

    <TextView
        android:id="@+id/txtpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="54dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/campoEmail2" />

    <Button
        android:id="@+id/btnRegistrarse"
        style="@style/LoginBoton"
        android:layout_width="228dp"
        android:layout_height="60dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="88dp"
        android:text="REGISTRARSE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/campoPassword2" />

    <TextView
        android:id="@+id/txtIniSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="104dp"
        android:text="INICIAR SESION"
        android:textColor="@color/LoginText"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRegistrarse" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/campoEmail2"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:hint="Ingrese su email"
        android:inputType="textEmailAddress"
        app:barrierMargin="@dimen/material_emphasis_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtEmail2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/campoPassword2"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:hint="Ingrese password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtpassword" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="52dp"
        android:text="Nombre Completo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtRegistrese" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/campoNombre"
        android:layout_width="255dp"
        android:layout_height="43dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="36dp"
        android:hint="Ingrese su nombre completo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtNombre" />


</androidx.constraintlayout.widget.ConstraintLayout>