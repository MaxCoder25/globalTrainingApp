<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRutinas_Entrenamiento"
        android:layout_width="405dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="392dp"
            android:layout_height="140dp">

            <TextView
                android:id="@+id/etiquetaEjercicio"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="76dp"
                android:background="@android:drawable/editbox_background"

                android:text="Ejercicio"
                app:layout_constraintStart_toStartOf="@+id/img_Ejerc"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/etiquetaRepeticiones"
                android:layout_width="94dp"
                android:layout_height="30dp"
                android:layout_marginStart="160dp"

                android:layout_marginTop="32dp"
                android:background="@android:drawable/editbox_background"
                android:text="Repeticiones"
                app:layout_constraintStart_toStartOf="@+id/img_Ejerc"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_Ejerc"
                android:layout_width="115dp"
                android:layout_height="107dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/domi_prona" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>