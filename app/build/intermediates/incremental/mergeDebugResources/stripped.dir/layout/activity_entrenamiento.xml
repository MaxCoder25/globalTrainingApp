<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EntrenamientoConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.EntrenamientoActivity">


    <TextView
        android:id="@+id/TXT_NOMBRE"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"

        android:background="@android:drawable/editbox_background"
        android:text="NOMBRE ENTRENAMIENTO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TXT_MUSCULOS"
        android:layout_width="175dp"
        android:layout_height="62dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="92dp"

        android:background="@android:drawable/editbox_background"
        android:text="MUSCULOS SEPARADOS CON COMA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TXT_NIVEL"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"

        android:background="@android:drawable/editbox_background"
        android:text="NIVEL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdelanteActivity"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="56dp"
        android:text="Adelante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TXT_TIEMPO"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TXT_TIEMPO"
        android:layout_width="162dp"
        android:layout_height="31dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="80dp"
        android:background="@android:drawable/editbox_background"
        android:text="DURACION EN MIN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TXT_MUSCULOS" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recicler_entrenamiento"
        android:layout_width="404dp"
        android:layout_height="409dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAdelanteActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>