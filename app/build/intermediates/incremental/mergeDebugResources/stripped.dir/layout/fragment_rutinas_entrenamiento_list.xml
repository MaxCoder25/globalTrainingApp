<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRutinas_Entrenamiento"
        android:layout_width="417dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="134dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_CambioEjercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="192dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#E00A0A"
                android:clickable="true"
                android:tint="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/etiquetaEjercicio"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="#F8F6F6"
                app:srcCompat="@android:drawable/ic_popup_sync"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/etiquetaEjercicio"
                android:layout_width="164dp"
                android:layout_height="32dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="72dp"
                android:background="@android:drawable/editbox_background"

                android:text="Ejercicio"
                app:layout_constraintStart_toStartOf="@+id/img_Ejerc"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/etiquetaRepeticiones"
                android:layout_width="91dp"
                android:layout_height="35dp"
                android:layout_marginStart="167dp"

                android:layout_marginTop="25dp"
                android:background="@android:drawable/editbox_background"
                android:text="Repeticiones"
                app:layout_constraintStart_toStartOf="@+id/img_Ejerc"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_Ejerc"
                android:layout_width="108dp"
                android:layout_height="92dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/domi_prona" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>