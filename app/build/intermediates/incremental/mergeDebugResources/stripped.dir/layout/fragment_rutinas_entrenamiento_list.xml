<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRutinas_Entrenamiento"
        android:layout_width="400dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="390dp"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_CambioEjercicio"
                android:layout_width="64dp"
                android:layout_height="52dp"
                android:layout_marginStart="128dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#E00A0A"
                android:clickable="true"
                android:tint="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/etiquetaRepeticiones"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="#F8F6F6"
                app:srcCompat="@android:drawable/ic_popup_sync"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/etiquetaEjercicio"
                android:layout_width="246dp"
                android:layout_height="50dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="76dp"
                android:background="@android:drawable/editbox_background"

                android:text="Ejercicio"
                app:layout_constraintStart_toStartOf="@+id/img_Ejerc"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/etiquetaRepeticiones"
                android:layout_width="94dp"
                android:layout_height="30dp"
                android:layout_marginStart="160dp"

                android:layout_marginTop="32dp"
                android:background="@android:drawable/editbox_background"
                android:text="Repeticiones"
                app:layout_constraintStart_toStartOf="@+id/img_Ejerc"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_Ejerc"
                android:layout_width="115dp"
                android:layout_height="107dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/domi_prona" />

            <TextView
                android:id="@+id/txtCambioEjerc"
                android:layout_width="121dp"
                android:layout_height="17dp"
                android:layout_marginStart="264dp"
                android:layout_marginTop="4dp"
                android:text="Cambiar ejercicio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>