<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.InicioFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="365dp"
                android:layout_height="130dp"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_correoUsuarioNAVHEADER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="156dp"
                android:text="ENTRENAMIENTO DE HOY"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/calendarView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="216dp"
                android:layout_marginTop="156dp"
                android:text="L 28/03/2022"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_correoUsuarioNAVHEADER"
                app:layout_constraintTop_toTopOf="@+id/calendarView" />

            <ImageView
                android:id="@+id/tituloEntrenam"
                android:layout_width="298dp"
                android:layout_height="119dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/rutinaejem1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/calendarView" />

            <Button
                android:id="@+id/btnAdelante"
                android:layout_width="297dp"
                android:layout_height="49dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="136dp"
                android:text="ADELANTE"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tituloEntrenam" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_SemanaInicioFrag"
                android:layout_width="56dp"
                android:layout_height="51dp"
                android:layout_marginStart="272dp"
                android:layout_marginTop="36dp"
                android:clickable="true"
                android:src="@android:drawable/ic_popup_sync"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="@+id/calendarView"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtDesafio"
                android:layout_width="291dp"
                android:layout_height="65dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="                        DESAFIO                                                           Pon a prueba tus capacidades"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnAdelante" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="306dp"
                android:layout_height="118dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="72dp"
                android:src="@drawable/plancha1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtDesafio" />

            <Button
                android:id="@+id/btnAdelante2"
                android:layout_width="287dp"
                android:layout_height="52dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="128dp"
                android:text="ACEPTO EL RETO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="336dp"
                android:layout_marginTop="4dp"
                android:text="Editar"
                app:layout_constraintStart_toStartOf="@+id/calendarView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btb_salirSesion"
                android:layout_width="113dp"
                android:layout_height="54dp"
                android:layout_marginStart="16dp"
                android:text="CERRAR SESION"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>