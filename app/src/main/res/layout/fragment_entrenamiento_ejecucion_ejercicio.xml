<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrenamiento.fragment_entrenamiento_ejecucion_ejercicio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerEjerc_2doUso"
            android:layout_width="403dp"
            android:layout_height="419dp"
            android:layout_marginTop="67dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_Adelante"
            app:layout_constraintVertical_bias="0.902" />

        <TextView
            android:id="@+id/txt_Preparate"
            android:layout_width="301dp"
            android:layout_height="82dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:text="PREPARATE"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_Adelante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="216dp"
            android:text="Adelante"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_Preparate" />

        <TextView
            android:id="@+id/txt_10Mas"
            android:layout_width="79dp"
            android:layout_height="36dp"
            android:layout_marginStart="168dp"
            android:layout_marginTop="216dp"
            android:text="+ 10 seg"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/btn_Adelante"
            app:layout_constraintTop_toTopOf="@+id/txt_Preparate" />

        <TextView
            android:id="@+id/txt_10Menos"
            android:layout_width="87dp"
            android:layout_height="43dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="44dp"
            android:text="- 10  seg"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_Adelante"
            app:layout_constraintTop_toTopOf="@+id/txt_Preparate" />

        <TextView
            android:id="@+id/txt_tiempoPreparate"
            android:layout_width="91dp"
            android:layout_height="89dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="10"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_Preparate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>