<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrenamiento.fragment_entrenamiento_ejecucion_ejercicio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_shade_1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerEjerc_2doUso"
            android:layout_width="403dp"
            android:layout_height="419dp"
            android:layout_marginTop="67dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_Empezar"
            app:layout_constraintVertical_bias="0.902" />

        <TextView
            android:id="@+id/txt_Preparate"
            android:layout_width="301dp"
            android:layout_height="82dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="28dp"
            android:text="PREPARATE"
            android:textColor="@color/rojo_Rebelde"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_Empezar"
            android:layout_width="123dp"
            android:layout_height="44dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="108dp"
            android:text="Empezar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_cambioEjercicio" />

        <TextView
            android:id="@+id/txt_cambioEjercicio"
            android:layout_width="320dp"
            android:layout_height="98dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="104dp"
            android:gravity="center"
            android:text="Puedes cambiar los ejercicios con el boton rojo de su respectivo ejercicio"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_Preparate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>