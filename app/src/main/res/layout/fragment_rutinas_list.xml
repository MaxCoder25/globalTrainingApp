<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRutinas_Entrenamiento"
        android:layout_width="409dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="205dp">

            <TextView
                android:id="@+id/etiquetaNivel"
                android:layout_width="159dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:drawable/editbox_background"

                android:text="Nivel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/etiquetaNombre"
                android:layout_width="247dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@android:drawable/editbox_background"

                android:text="Nombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etiquetaNivel" />

            <TextView
                android:id="@+id/etiquetaTiempo"
                android:layout_width="174dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:background="@android:drawable/editbox_background"

                android:text="Tiempo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etiquetaMusculos" />

            <TextView
                android:id="@+id/etiquetaMusculos"
                android:layout_width="374dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@android:drawable/editbox_background"

                android:text="Musculos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etiquetaNombre" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>