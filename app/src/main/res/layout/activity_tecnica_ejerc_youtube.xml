<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".TecnicaYoutubeActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/ytPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nombreEjercTecnica"
        android:layout_width="348dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="Nombre ejercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_tipMovTecnica" />

    <TextView
        android:id="@+id/txt_descripcionEjercTecnica"
        android:layout_width="361dp"
        android:layout_height="197dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:text="Descripcion Ejercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_nombreEjercTecnica" />

    <TextView
        android:id="@+id/txt_tipMovTecnica"
        android:layout_width="384dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Tipo de movimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_nivelEjercTecnica" />

    <TextView
        android:id="@+id/txt_nivelEjercTecnica"
        android:layout_width="216dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="232dp"
        android:text="Nivel ejercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>