<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrenamiento.fragment_entrenamiento_cambio_ejercicio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerEjerc_2doUso"
            android:layout_width="403dp"
            android:layout_height="419dp"
            android:layout_marginTop="208dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_Escoger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_EjercSimilares" />

        <TextView
            android:id="@+id/txt_EjercSimilares"
            android:layout_width="287dp"
            android:layout_height="172dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Escoge un ejercicio similar"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_Escoger"
            android:layout_width="122dp"
            android:layout_height="56dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="432dp"
            android:text="Escoger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reciclerEjerc_2doUso" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>