<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrenamiento.fragment_entrenamiento_ejecucion_ejercicio_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_shade_1">

        <TextView
            android:id="@+id/txt_salirEntrenamientoDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="208dp"
            android:layout_marginTop="40dp"
            android:text="Salir Entrenamiento"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_salirEntrenam_Desc"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:textStyle="bold"

            android:src="@android:drawable/presence_offline"
            app:layout_constraintStart_toEndOf="@+id/txt_salirEntrenamientoDesc"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSiguientEjerc2"
            android:layout_width="161dp"
            android:layout_height="32dp"
            android:layout_marginTop="144dp"
            android:gravity="center"
            android:text="Siguientes Ejercicios"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_DESCANSO" />

        <TextView
            android:id="@+id/txt_DESCANSO"
            android:layout_width="316dp"
            android:layout_height="117dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="76dp"
            android:gravity="center"
            android:text="DESCANSO EJERCICIO"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerEjerc_3erUso"
            android:layout_width="398dp"
            android:layout_height="353dp"
            android:layout_marginTop="163dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_Saltar"
            app:layout_constraintVertical_bias="0.833" />

        <TextView
            android:id="@+id/txt_tiempoDescanso"
            android:layout_width="91dp"
            android:layout_height="89dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="132dp"
            android:gravity="center"
            android:text="60"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_DESCANSO" />

        <Button
            android:id="@+id/btn_Saltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="236dp"
            android:text="SALTAR"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_DESCANSO" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>