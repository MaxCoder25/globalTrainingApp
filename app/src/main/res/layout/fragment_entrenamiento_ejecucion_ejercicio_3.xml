<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrenamiento.fragment_entrenamiento_ejecucion_ejercicio_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtSiguientEjerc2"
            android:layout_width="161dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:background="@android:drawable/editbox_background"
            android:text="Siguientes Ejercicios"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_10Menos_3" />

        <TextView
            android:id="@+id/txt_DESCANSO"
            android:layout_width="316dp"
            android:layout_height="117dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="DESCANSO EJERCICIO"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_10Menos_3"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="239dp"
            android:text="- 10  seg"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_DESCANSO" />

        <TextView
            android:id="@+id/txt_10Mas_3"
            android:layout_width="79dp"
            android:layout_height="36dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="239dp"
            android:text="+ 10 seg"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/btn_Saltar"
            app:layout_constraintTop_toTopOf="@+id/txt_DESCANSO" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclerEjerc_3erUso"
            android:layout_width="398dp"
            android:layout_height="353dp"
            android:layout_marginTop="163dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_Saltar"
            app:layout_constraintVertical_bias="0.833" />

        <TextView
            android:id="@+id/txt_tiempoDescanso"
            android:layout_width="91dp"
            android:layout_height="89dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="132dp"
            android:gravity="center"
            android:text="60"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_DESCANSO" />

        <Button
            android:id="@+id/btn_Saltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="236dp"
            android:text="SALTAR"
            app:layout_constraintStart_toEndOf="@+id/txt_10Menos_3"
            app:layout_constraintTop_toTopOf="@+id/txt_DESCANSO" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>